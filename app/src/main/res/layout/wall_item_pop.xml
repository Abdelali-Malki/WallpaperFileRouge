<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="bottom"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/lay_border_white"
            android:orientation="vertical"
          >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"

                android:orientation="horizontal">



                <TextView
                    android:id="@+id/closeTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"

                    android:drawableRight="@drawable/ic_close_24px"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:gravity="center"

                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="What would you like to do?" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                   android:layout_gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/btnSetWall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"

                        android:background="@drawable/lay_border_white"
                        android:paddingLeft="10dp"
                        android:gravity="left"

                        android:paddingTop="10dp"

                        android:paddingBottom="10dp"

                        android:drawableLeft="@drawable/ic_insert_photo_24px"
                        android:textColor="@color/black"
                        android:text="      Set Home Screen Wallpaper" />
                    <TextView
                        android:id="@+id/btnSetLock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:gravity="left"
                        android:paddingTop="10dp"
                        android:background="@drawable/lay_border_white"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="10dp"
                        android:drawableLeft="@drawable/ic_https_24px"
                        android:textColor="@color/black"
                        android:text="      Set Lock Screen Wallpaper" />
                    <TextView
                        android:id="@+id/btnSetBoth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:gravity="left"
                        android:paddingTop="10dp"
                        android:background="@drawable/lay_border_white"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="10dp"
                        android:drawableLeft="@drawable/lock_b"
                        android:textColor="@color/black"
                        android:text="    Set Both Screen Wallpaper" />
                    <TextView
                        android:id="@+id/btnShare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:gravity="left"
                        android:paddingTop="10dp"
                        android:background="@drawable/lay_border_white"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="10dp"
                        android:drawableTint="@color/black"
                        android:drawableLeft="@drawable/ic_share_24px"
                        android:textColor="@color/black"
                        android:text="      Share Wallpaper" />
                    <TextView
                        android:id="@+id/btnSave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:gravity="left"
                        android:paddingTop="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/lay_border_white"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:drawableTint="@color/black"
                        android:drawableLeft="@drawable/ic_save_24px"
                        android:textColor="@color/black"
                        android:text="      Save Wallpaper" />
                </LinearLayout>



            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>